{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "@/*": ["./src/*"],
      "@views/*": ["./src/views/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@store/*": ["./src/store/*"],
      "@router/*": ["./src/router/*"]
    },
    "types": ["vite/client"],
    "moduleResolution": "node"
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts", "./src/**/*.vue"]
}
